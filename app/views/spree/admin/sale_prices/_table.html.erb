<table class="index table" id="product_sale_prices" data-hook="sale_price_table">
  <colgroup>
    <col></col>
    <col></col>
    <col></col>
    <col style="width: 20%"></col>
    <col style="width: 20%"></col>
    <col style="width: 20%"></col>
    <col></col>
  </colgroup>
  <thead>
    <tr data-hook="products_header">
      <th><%= Spree.t('enabled', scope: :spree_sale_price) %></th>
      <th><%= Spree.t('kind', scope: :spree_sale_price) %></th>
      <th><%= Spree.t('amount', scope: :spree_sale_price) %></th>
      <th><%= Spree.t('start_at', scope: :spree_sale_price) %></th>
      <th><%= Spree.t('end_at', scope: :spree_sale_price) %></th>
      <th><%= Spree.t('created_at', scope: :spree_sale_price) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "sale_price", collection: product.master.sale_prices.order(created_at: :asc), locals: {product: product} %>
  </tbody>
</table>
